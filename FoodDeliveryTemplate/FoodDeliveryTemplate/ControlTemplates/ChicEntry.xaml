<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodDeliveryTemplate.ControlTemplates.ChicEntry">

    <ContentView.Resources>

        <ControlTemplate x:Key="ChicEntryControlTemplate">

            <Border BindingContext="{Binding Source={RelativeSource TemplatedParent}}"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 10"
                    BackgroundColor="{AppThemeBinding Light={StaticResource CardColorLight},
                            Dark={StaticResource CardColorDark}}">

                <Entry Text="{Binding Text, Mode=TwoWay}" 
                       Margin="8,0,8,0"/>
                
            </Border>

        </ControlTemplate>
        
    </ContentView.Resources>
    
</ContentView>
